<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="284dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:text="Your GPA"
        android:textColor="@color/material_dynamic_neutral80"
        android:textColorHint="@color/material_dynamic_neutral80"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/warningMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gpaVal"
        android:layout_width="161dp"
        android:layout_height="85dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Expected GPA:"
        android:textColor="@color/material_dynamic_neutral80"
        android:textColorHint="@color/material_dynamic_neutral80"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/warningMsg"
        android:layout_width="301dp"
        android:layout_height="111dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="121dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral80"
        android:textColorHint="@color/material_dynamic_neutral80"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>